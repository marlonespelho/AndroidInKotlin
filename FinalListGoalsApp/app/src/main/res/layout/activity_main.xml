<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.grupointegrado.tads.finallistgoalsapp.MainActivity">

    <TextView
        android:id="@+id/tv_null_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Nenhuma meta adicionada"
        android:textColor="#FF00"
        android:textSize="22sp"
        android:visibility="visible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcview_listGoals"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"></android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>
